<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=390, initial-scale=1.0">
    <title>TripMate Register</title>
    <link rel="stylesheet" href="/css/login.css">
    <link href="https://fonts.googleapis.com/css2?family=League+Spartan:wght@100..900&display=swap" rel="stylesheet">

    <script src="https://kit.fontawesome.com/ce1662cecb.js" crossorigin="anonymous"></script>
</head>
<body>

<!-- Header -->
<%- include("partials/back-header") %>
<!-- Back Button -->


<!-- Logo -->
<div class="logo"><img src="icons/Logo.png" alt="TripMate Logo" width="288"></div>

<form class="register-inputs" action="/register" method="post">
    <p class="email-valid-info">Please enter valid email.</p>
    <div class="input-field">
        <label for="reg-email" style="display: none;">Type your email.</label>
        <input type="email" id="reg-email" name="email" placeholder="E-mail">
    </div>
    <div class="input-field">
        <label for="reg-name" style="display: none;">Type your username.</label>
        <input type="text" id="reg-name" name="username" placeholder="Name">
    </div>
    <div class="input-field">
        <label for="reg-pwd" style="display: none;">Type your password.</label>
        <input type="password" id="reg-pwd" name="password" placeholder="Password">
        <!-- Eye icon for password visibility -->
        <div class="hide-pwd-btn" onclick="hideShowPwd()">
            <i class="fa-solid fa-eye-slash"></i>
        </div>
    </div>
    <!-- Login Button -->
    <button class="cfm-btn button" id="reg-cfm-btn" type="submit">Register</button>
</form>

<% if (error) { %>
    <script>alert("<%= error %>")</script>
<% } %>

<% if (success) { %>
    <script>
        alert("<%= success %>")
        setTimeout(()=>{
            window.location.href="/login";
            },1000);
    </script>
<% } %>

<!-- Register Section -->
<div class="tip-section">
    Already have an account?  <a href="/login">Login</a>
</div>

<script src="js/login.js"></script>

</body>
</html>
