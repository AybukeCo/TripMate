<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TripMate Map</title>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCva7Ese-XEMjqWdBH8yawts7p0gzSQsPM&callback=initMap&libraries=places" async defer></script>
</head>
<body>
<h2>Google Maps for MyTripMate</h2>
<div id="map" style="height: 500px; width: 100%;"></div>

<script>
    function initMap() {
        var map = new google.maps.Map(document.getElementById("map"), {
            center: { lat: 37.7749, lng: -122.4194 }, // Example: San Francisco
            zoom: 12,
        });

        var marker = new google.maps.Marker({
            position: { lat: 37.7749, lng: -122.4194 },
            map: map,
            title: "San Francisco"
        });
    }
</script>
</body>
</html>
